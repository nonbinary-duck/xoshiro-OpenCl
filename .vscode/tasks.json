{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "fresh-build",
            "group": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && make fresh-release"
        },
        {
            "label": "fresh-build-debug",
            "group": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && make fresh-debug"
        },
        {
            "label": "fresh-build & run",
            "group": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && make fresh-release; cd build/release && ./<PROJECT_NAME>"
        },
        {
            "label": "build",
            "group": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && make release"
        },
        {
            "label": "build-debug",
            "group": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && make debug"
        },
        {
            "label": "build & run",
            "group": "build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && make release; cd build/release && ./<PROJECT_NAME>"
        }
    ]
}